
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@model LoginUserVM
<link rel="stylesheet" href="~/admin/assets/css/style.css">
    <link rel="shortcut icon" href="~/admin/assets/images/favicon.png" />

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
            <div class="row flex-grow">
                <div class="col-lg-6 d-flex align-items-center justify-content-center">
                    <div class="auth-form-transparent text-left p-3">
                        <div class="brand-logo">
                            <img src="~/admin/assets/images/logo.svg" alt="logo">
                        </div>
                        <h4>Welcome back!</h4>
                        <h6 class="font-weight-light">Happy to see you again!</h6>
                        <form class="pt-3" method="post">
                            <div class="form-group">
                                <label asp-for="UsernameorEmail">Username</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-account-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="UsernameorEmail" type="text" class="form-control form-control-lg border-left-0"  placeholder="Username or Email">
                                    <span asp-validation-for="UsernameorEmail"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-lock-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Password" type="password" class="form-control form-control-lg border-left-0"placeholder="Password">
                                    <span asp-validation-for="Password"></span>

                                </div>
                            </div>
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label aspclass="form-check-label text-muted">
                                        <input asp-for="RememberMe" class="form-check-input">
                                        Keep me signed in
                                    </label>
                                </div>
                            </div>
                            <div class="my-3">
                                <button class="btn btn-submit btn-primary btn-lg font-weight-medium auth-form-btn">LOGIN</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary">Create</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 login-half-bg d-flex flex-row">
                    <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2020  All rights reserved.</p>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    </div>
