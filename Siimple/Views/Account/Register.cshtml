@{
    ViewData["Title"] = "Register";
    Layout = null;
}
@model RegisterUserVM
<link rel="stylesheet" href="~/admin/assets/css/style.css">
<link rel="shortcut icon" href="~/admin/assets/images/favicon.png" />
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
            <div class="row flex-grow">
                <div class="col-lg-6 d-flex align-items-center justify-content-center">
                    <div class="auth-form-transparent text-left p-3">
                        <div class="brand-logo">
                            <img src="~/admin/assets/images/logo.svg" alt="logo">
                        </div>
                        <h4>New here?</h4>
                        <h6 class="font-weight-light">Join us today! It takes only few steps</h6>
                        <form class="pt-3" method="post">
                            <div class="form-group">
                                <label asp-for="Name" >Name</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-account-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Name" type="text" class="form-control form-control-lg border-left-0" placeholder="Name">
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname">Surname</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-account-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Surname" type="text" class="form-control form-control-lg border-left-0" placeholder="Surname">
                                    <span asp-validation-for="Surname"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Username">Username</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-account-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Username" type="text" class="form-control form-control-lg border-left-0" placeholder="Username">
                                    <span asp-validation-for="Username"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-email-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Email" type="email" class="form-control form-control-lg border-left-0" placeholder="Email">
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-lock-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Password"  type="password" class="form-control form-control-lg border-left-0" placeholder="Password">
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Password</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-lock-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg border-left-0" placeholder="Confirm Password">
                                    <span asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div asp-validation-summary="ModelOnly"></div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-submit btn-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a asp-controller="Account" asp-action="Login" class="text-primary">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 register-half-bg d-flex flex-row">
                    <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2020  All rights reserved.</p>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>