
@{
    ViewData["Title"] = "Update";
}

@model UpdateCardVM
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Card</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" type="text" class="form-control" placeholder="Title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" type="text" class="form-control" placeholder="Description">
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IconUrl">Icon Url</label>
                    <input asp-for="IconUrl" type="text" class="form-control" placeholder="IconUrl">
                    <span asp-validation-for="IconUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image">Image</label>
                    <input asp-for="Image" class="form-control">
                    <span asp-validation-for="Image"></span>
                </div>
                <div><img src="~/assets/img/@ViewBag.Image" class="mb-3" /></div>
                <button type="submit" class="btn btn-primary me-2" style="color:white;">Update</button>
                <button class="btn btn-light" asp-action="Index" asp-controller="Card">Cancel</button>
            </form>
        </div>
    </div>
</div>